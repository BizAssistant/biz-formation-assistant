# Cloudflare account ID (found in dashboard)
CF_ACCOUNT_ID=

# Cloudflare API token with Workers + R2 + KV + Zone settings permissions
CF_API_TOKEN=

# Zone ID for your domain (for optional API actions like purge/firewall)
CF_ZONE_ID=

# Cloudflare Access JWT public key (Zero Trust → Access → Settings → JWT public key)
CF_ACCESS_PUBLIC_KEY=

# Access Audience tag (Zero Trust → Access → Applications → Audience)
CF_ACCESS_AUD=

# Optional: Slack webhook for Worker-side alerts
SLACK_WEBHOOK_URL=
